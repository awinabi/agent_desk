%a.brand{:href => "/"}
  Agent Desk
- unless current_user.nil?
  %span.caption
    .brand_name
      &nbsp;Agent Desk&nbsp;
  %form.search{:action => "/"}
    %input.search-query{:name => "search", :placeholder => "Search by Customer ID", :type => "text", :autocomplete=>"off", :style => "width: 250px;"}
  %ul.nav
    %li
      %a{:href => "/customers/search"}
        %i.icon-list
        Advanced Search
    %li
      %a{:href => '/faqs'} FAQ
    %li#user.dropdown
      = link_to content_tag(:span, content_tag(:i, '', :class=>"icon icon-white icon-user") + "#{current_user.name}"),"#"
      %ul.dropdown-menu
        %li
          = (link_to "Sign out", destroy_user_session_path, :method => :delete)
- else
  %span.caption
    .brand_name
      &nbsp;&nbsp; Agent Desk &nbsp

